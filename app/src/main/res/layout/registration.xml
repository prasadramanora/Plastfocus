<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/ll_regiform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:inputType="textCapSentences"
                    android:background="@drawable/textvewborder"
                    android:hint=" Name(*)"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:textSize="12sp">

                </EditText>
                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/textvewborder"
                    android:hint=" Email(*)"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:textSize="12sp">

                </EditText>
                <EditText
                    android:id="@+id/edt_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/textvewborder"
                    android:hint=" Mobile(*)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:textSize="12sp">

                </EditText>
                <EditText
                    android:id="@+id/edt_orgnization"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:inputType="textCapSentences"
                    android:background="@drawable/textvewborder"
                    android:hint=" Company(*)"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:textSize="12sp">

                </EditText>
                <EditText
                    android:id="@+id/edt_designation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:inputType="textCapSentences"
                    android:background="@drawable/textvewborder"
                    android:hint=" Designation(*)"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:textSize="12sp">

                </EditText>



                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textCapSentences"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/textvewborder"
                    android:hint=" Address(*)"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:textSize="12sp">

                </EditText>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/edt_city"
                    android:background="@drawable/textvewborder"
                    android:inputType="textCapSentences"
                    android:hint=" City(*)"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:textSize="12sp">

                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/edt_state"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/textvewborder"
                    android:inputType="textCapSentences"
                    android:hint=" State(*)"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:textSize="12sp">

                </EditText>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/edt_country"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/textvewborder"
                    android:inputType="textCapSentences"
                    android:hint=" Country(*)"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:textSize="12sp">

                </EditText>

                <EditText
                    android:id="@+id/edt_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/textvewborder"
                    android:hint=" Zipcode(*)"
                    android:inputType="number"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:textSize="12sp">

                </EditText>






                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Group *"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/colursecondary"
                    android:textStyle="bold">

                </TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rl_categorygroup1"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">
