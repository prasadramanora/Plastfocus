                        android:layout_width="match_parent"
                        android:id="@+id/tv_cat1"
                        android:background="@drawable/textviewborder"
                        android:text="Emerging Technology"
                        android:gravity="center"
                        android:textColor="@color/colurprimary"
                        android:textStyle="bold"
                        android:layout_height="40dp">

                    </TextView>
                    <ImageView
                        android:layout_width="15dp"
                        android:id="@+id/iv_lowerarraow"
                        android:background="@drawable/lowerarrow"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_height="15dp">

                    </ImageView>
                    <ImageView
                        android:layout_width="15dp"
                        android:id="@+id/iv_upperarraow"
                        android:visibility="gone"
                        android:background="@drawable/upperarraow"
                        android:layout_marginTop="13dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_height="15dp">

                    </ImageView>
                </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:visibility="gone"
    android:orientation="vertical"
   android:id="@+id/rl_categoryitems1"
    android:layout_height="wrap_content">



</LinearLayout>

