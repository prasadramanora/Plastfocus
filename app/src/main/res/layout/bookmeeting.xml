<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"


    android:background="#fff">

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Test"
            android:textColor="@color/colurprimary"
            android:textSize="22dp"
            android:textStyle="bold"
            app:cardElevation="13dp"


            />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_companyname"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:text="Test"
            android:textColor="@color/colurprimary"
            android:textSize="12dp"
            app:cardElevation="13dp"


            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_email"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Test"
            android:textColor="@color/colorvisitorReg"
            android:textSize="16dp"


            />

        <TextView
            android:id="@+id/tv_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:text="Test"
            android:textColor="#000"
            android:textSize="13dp"
            android:textStyle="bold"
            app:cardElevation="13dp"


            />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_menu"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="Select Meeting Date"
        android:textSize="12sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tv_selectdate"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/tv_date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/textvewborder"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Please Select Date"
        android:textColor="@color/colurprimary"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tv_selecttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_selectdate"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Select Meeting Time"
        android:textSize="12sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tv_selecttimeformat"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/tv_selecttime"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/textvewborder"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Please Select Time"
        android:textColor="@color/colurprimary"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>

    <Button
        android:id="@+id/btn_bookmeeting"
        android:layout_width="170dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_selecttimeformat"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttunborder"
        android:text="Book Meeting"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16sp">

    </Button>


    <Button
        android:id="@+id/btn_updaedates"
        android:layout_width="match_parent"
        android:layout_height="42dp"
       android:layout_alignParentBottom="true"

        android:layout_marginTop="50dp"

        android:background="@color/colurprimary"
        android:text="Update Meeting Dates and Time"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16sp">

    </Button>

</RelativeLayout>